<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %> " alt="">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %> </p>
            </div>
            <a href="/blogs/<%= blog._id %>/edit" class="ui inverted green button">Edit Post</a>
            <form id="deleteBtn" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button id="deleteBtn" class="ui inverted red button">Delete Post</button>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>